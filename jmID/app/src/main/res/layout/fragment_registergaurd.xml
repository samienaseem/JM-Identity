<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registergaurd">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="24dp"
        android:id="@+id/gaurdpic"
        android:src="@drawable/gate1"/>


    <EditText
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:id="@+id/gid"
        android:layout_alignRight="@+id/gaurdpic"
        android:hint="Enter ID"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="28dp"/>


    <EditText
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:id="@+id/gfname"
        android:layout_alignRight="@+id/gaurdpic"
        android:layout_below="@+id/gid"
        android:hint="First Name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:id="@+id/glname"
        android:layout_alignRight="@+id/gaurdpic"
        android:layout_below="@+id/gfname"
        android:hint="Last name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gphone"
        android:layout_alignRight="@+id/gaurdpic"
        android:layout_below="@+id/glname"
        android:hint="Enter Phone Number"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gemail"
        android:layout_alignRight="@+id/gaurdpic"
        android:layout_below="@+id/gphone"
        android:hint="Enter Email Address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"/>


    <Button
        android:id="@+id/gadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gemail"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="307dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/colorAccent"
        android:text="ADD"
        android:textColor="#fff"
        android:textSize="20dp" />













</RelativeLayout>