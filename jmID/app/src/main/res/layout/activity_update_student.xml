<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".position3fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/uperwala"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >




    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/scrollhai"

        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/layout123">



            <EditText
                android:id="@+id/editText4"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="number"
                android:hint="JMI-ID" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="First Name" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_alignTop="@+id/editText4"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@android:drawable/ic_menu_camera" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/imageView"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Last Name" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CurrentCourse"
                android:layout_below="@+id/fname"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:hint="Currenet Course"
                android:inputType="textPersonName"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currentfaculty"
                android:layout_below="@+id/CurrentCourse"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Current Faculty"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentfaculty"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/issue"
                android:inputType="date"
                android:hint="Issue date"/>

            <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentfaculty"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:id="@+id/expiry"
                android:inputType="date"
                android:hint="Expiry date"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Email"
                android:layout_below="@+id/issue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_below="@+id/Email"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Phone Number"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/sregister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="update"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>




        </RelativeLayout>



    </ScrollView>






</RelativeLayout>