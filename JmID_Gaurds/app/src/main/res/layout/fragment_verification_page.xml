<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mountain_silhouette_night_tourists_mountaineers_117113_320x480"
    tools:context=".verification_page">



        <EditText
            android:id="@+id/editText"
            android:layout_width="264dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="65dp"
            android:ems="10"
            android:hint="JMI ID number"
            android:textColor="#fff"
            android:background="@drawable/textboxes"
            android:textColorHint="#fff"
            android:paddingLeft="10dp"
            android:inputType="number"

            android:layout_alignParentLeft="true" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="73dp"
            android:layout_height="66dp"
            android:layout_alignTop="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-11dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/circle"
            app:srcCompat="@android:drawable/ic_menu_camera"
            />

        <Button
            android:id="@+id/verify"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/textboxwith_whitebackground"
            android:fontFamily="roboto"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />


</RelativeLayout>