<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Splash">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/logoooo"
        android:id="@+id/imagelogo"
        android:layout_below="@+id/scout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/scout"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:background="@drawable/textfx"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textStyle="bold"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Developed"
        android:text="Developed by:-"
        android:textColor="#fff"
        android:textSize="28dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:layout_below="@+id/imagelogo"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shahnawaz "
        android:textColor="#fff"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/Developed"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:id="@+id/shah"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saquib Naseem "
        android:textColor="#fff"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/shah"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:id="@+id/samie"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sakib"
        android:textColor="#fff"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/samie"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:id="@+id/sakib"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vishwadev pratap singh"
        android:textColor="#fff"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/sakib"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:id="@+id/vishu"/>

    </LinearLayout>
</RelativeLayout>